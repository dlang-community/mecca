        },
        {
            "name": "lordcmdr",
            "targetType": "executable",
            "importPaths": ["examples"],
            "sourcePaths": ["examples/lordcmdr"],
            "targetName": "lordcmdr"
        },
        {
            "name": "sleeper",
            "targetType": "executable",
