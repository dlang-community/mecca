{
    "name": "mecca",
    "importPaths": ["src"],
    "sourcePaths": ["src"],
    "dflags" : ["-dip25"],
    "description" : "Mecca - Weka's reactor and infrastructure library",
    "copyright": "Copyright Â© 2017-2018, Weka.IO Ltd.",
    "license": "Boost",
    "versions-osx": ["Darwin", "Kqueue"],
    "dependencies" : {
        "openssl": "~>1.1.4+1.0.1g"
    },
    "configurations": [
        {
            "name": "mecca-lib",
            "targetType": "library",
            "targetName": "mecca"
        },
        {
            "name": "mecca-ut",
            "buildOptions": ["unittests"],
            "mainSourceFile": "ut/main.d",
